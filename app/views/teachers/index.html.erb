<style>
  body {
    background-color: rgb(238, 238, 238);
  }
</style>
<br><br><br><br>
<%  contador=1 %>
<% @courses.each do |course| %>
      <% if contador == 1 %>
        <div class="row">
          <div class="col-md-3 col-md-offset-1">
      <% else %>
        <div class="row">
          <div class="col-md-3">
      <% end %>
             <div class="thumbnail">
                <div class="caption">
                  <h3><%= course.nombre %></h3>
                  <%= link_to 'Entrar', course, class: "btn btn-primary" %>
                  
                </div>
            </div>
          </div>
          <% if contador == 3 %>
            <% contador = 1 %>
            </div>
          <% else %>
            <% contador = contador + 1 %>
          <% end %>      
<% end %>
            <% if @courses.size % 3 == 0 %>
              </div>
            <% end %>
