<h1>Listing teachers</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Especialidad</th>
      <th>Primer nombre</th>
      <th>Segundo nombre</th>
      <th>Primer apellido</th>
      <th>Segundo apellido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.codigo %></td>
        <td><%= teacher.especialidad %></td>
        <td><%= teacher.primer_nombre %></td>
        <td><%= teacher.segundo_nombre %></td>
        <td><%= teacher.primer_apellido %></td>
        <td><%= teacher.segundo_apellido %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

