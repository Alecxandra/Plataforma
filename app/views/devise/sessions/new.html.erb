<div class="jumbotron">
  <br><br>
  <h1 align="center"> Iniciar Sesion</h1>
  <br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name),html:{class: "form-horizontal"}) do |f| %>
  <fieldset>
        <div class="form-group">              
              <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>              
              <div class="col-md-8">
                <%= f.email_field :email, autofocus: true,id:"email", placeholder:"Correo electronico", class:"form-control" %>
              </div>
            </div> 
  
        <div class="form-group">              
              <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-key bigicon"></i></span>              
              <div class="col-md-8">
                <%= f.password_field :password, autocomplete: "off",id:"password", placeholder:"ContraseÃ±a", class:"form-control" %>
              </div>
            </div> 
  <br>
     <div class="col-md-2 col-md-offset-5 actions" >
   <%= f.submit "Entrar", class:"btn btn-lg btn-success" %>
       
      </div> 
</fieldset>  
<% end %>



</div>

<style>
    .header {
        color:#36A0FF;
        font-size:27px;
        padding:10px;
    }
    .bigicon {
        font-size:35px;
        color:#36A0FF;
    }
</style>